{
  "info": {
    "name": "Canonical Hotel API - STEP 2",
    "description": "Faredown Hotels API - 4 canonical endpoints",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "1. Autocomplete",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/hotels/autocomplete?q=Dubai&limit=15",
          "host": ["{{base_url}}"],
          "path": ["api", "hotels", "autocomplete"],
          "query": [
            {"key": "q", "value": "Dubai"},
            {"key": "limit", "value": "15"}
          ]
        }
      }
    },
    {
      "name": "2. Search Hotels",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"city_code\":\"DXB\",\"check_in\":\"2025-10-31\",\"check_out\":\"2025-11-03\",\"adults\":2,\"children\":0,\"rooms\":1}"
        },
        "url": {
          "raw": "{{base_url}}/api/hotels/search",
          "host": ["{{base_url}}"],
          "path": ["api", "hotels", "search"]
        }
      }
    },
    {
      "name": "3. Hotel Details",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/hotels/{{property_id}}?include_images=true",
          "host": ["{{base_url}}"],
          "path": ["api", "hotels", "{{property_id}}"],
          "query": [{"key": "include_images", "value": "true"}]
        }
      }
    },
    {
      "name": "4. Room Rates",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"check_in\":\"2025-10-31\",\"check_out\":\"2025-11-03\",\"adults\":2,\"children\":0,\"rooms\":1,\"refresh\":false}"
        },
        "url": {
          "raw": "{{base_url}}/api/hotels/{{property_id}}/rates",
          "host": ["{{base_url}}"],
          "path": ["api", "hotels", "{{property_id}}", "rates"]
        }
      }
    }
  ],
  "variable": [
    {"key": "base_url", "value": "https://builder-faredown-pricing.onrender.com"},
    {"key": "property_id", "value": ""}
  ]
}
