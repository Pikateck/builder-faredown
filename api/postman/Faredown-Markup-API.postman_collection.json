{
  "info": {
    "name": "Faredown Markup API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Markups",
      "request": {
        "method": "GET",
        "url": {{baseUrl}}"/api/markups?module=air&page=1&pageSize=20"
      }
    },
    {
      "name": "Create Markup",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"module\": \"transfer\",\n  \"rule_name\": \"Airport Taxi Sedan BOMâ†’NAVI\",\n  \"transfer_kind\": \"airport_taxi\",\n  \"vehicle_type\": \"sedan\",\n  \"route_from\": \"BOM\",\n  \"route_to\": \"NAVI\",\n  \"m_type\": \"flat\",\n  \"m_value\": 150,\n  \"priority\": 1,\n  \"user_type\": \"all\",\n  \"is_active\": true\n}"
        },
        "url": {{baseUrl}}"/api/markups"
      }
    },
    {
      "name": "Update Markup",
      "request": {
        "method": "PUT",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode": "raw", "raw": "{\n  \"rule_name\": \"Updated Rule\"\n}"},
        "url": {{baseUrl}}"/api/markups/:id"
      }
    },
    {
      "name": "Toggle Active",
      "request": {
        "method": "PATCH",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode": "raw", "raw": "{ \n  \"is_active\": false\n}"},
        "url": {{baseUrl}}"/api/markups/:id/status"
      }
    },
    {
      "name": "Delete Markup",
      "request": {"method": "DELETE", "url": {{baseUrl}}"/api/markups/:id"}
    },
    {
      "name": "Test Apply (Air)",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"module\": \"air\",\n  \"airline_code\": \"EK\",\n  \"route_from\": \"BOM\",\n  \"route_to\": \"DXB\",\n  \"booking_class\": \"Y\",\n  \"base_amount\": 12000,\n  \"currency\": \"INR\"\n}"
        },
        "url": {{baseUrl}}"/api/markups/test-apply"
      }
    }
  ],
  "variable": []
}
