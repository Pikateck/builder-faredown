{
  "info": {
    "name": "Faredown - TBO Hotels (Live)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {"method": "GET", "url": "{{API_BASE}}/api/tbo-hotels/health"}
    },
    {
      "name": "Search (DXB sample)",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"destination\": \"DXB\",\n  \"checkIn\": \"2026-01-12\",\n  \"checkOut\": \"2026-01-15\",\n  \"adults\": 2,\n  \"children\": 0,\n  \"currency\": \"INR\"\n}"},
        "url": "{{API_BASE}}/api/tbo-hotels/search"
      }
    },
    {
      "name": "PreBook",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"HotelCode\": \"{{HotelCode}}\",\n  \"RatePlanCode\": \"{{RatePlanCode}}\",\n  \"RoomTypeCode\": \"{{RoomTypeCode}}\",\n  \"RateKey\": \"{{RateKey}}\"\n}"},
        "url": "{{API_BASE}}/api/tbo-hotels/prebook"
      }
    },
    {
      "name": "Book",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"BookingId\": \"{{PreBookId}}\",\n  \"PassengerDetails\": {\n    \"Title\": \"Mr\",\n    \"FirstName\": \"Test\",\n    \"LastName\": \"User\"\n  }\n}"},
        "url": "{{API_BASE}}/api/tbo-hotels/book"
      }
    },
    {
      "name": "Generate Voucher",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"BookingId\": \"{{BookingId}}\"\n}"},
        "url": "{{API_BASE}}/api/tbo-hotels/voucher"
      }
    },
    {
      "name": "Get Booking Details",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"BookingId\": \"{{BookingId}}\"\n}"},
        "url": "{{API_BASE}}/api/tbo-hotels/booking/details"
      }
    },
    {
      "name": "Hotel Info",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"HotelCode\": \"{{HotelCode}}\"\n}"},
        "url": "{{API_BASE}}/api/tbo-hotels/info"
      }
    },
    {
      "name": "Hotel Room",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"RateKey\": \"{{RateKey}}\"\n}"},
        "url": "{{API_BASE}}/api/tbo-hotels/room"
      }
    },
    {
      "name": "Change Request Status",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"ChangeRequestId\": \"{{ChangeRequestId}}\",\n  \"BookingId\": \"{{BookingId}}\"\n}"},
        "url": "{{API_BASE}}/api/tbo-hotels/change/status"
      }
    },
    {
      "name": "Top Destinations (Static)",
      "request": {
        "method": "GET",
        "url": "{{API_BASE}}/api/tbo-hotels-static/top-destinations"
      }
    },
    {
      "name": "Agency Balance",
      "request": {
        "method": "GET",
        "url": "{{API_BASE}}/api/tbo-hotels/balance"
      }
    },
    {
      "name": "Validate Payload (server-side)",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"HotelCode\": \"{{HotelCode}}\",\n  \"RateKey\": \"{{RateKey}}\"\n}"},
        "url": "{{API_BASE}}/api/tbo-hotels/validate?type=prebook"
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "url": "{{API_BASE}}/api/tbo-hotels/logout"
      }
    },
    {
      "name": "Cancel Booking",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"BookingId\": \"{{BookingId}}\",\n  \"booking_ref\": \"{{BookingRef}}\"\n}"},
        "url": "{{API_BASE}}/api/tbo-hotels/booking/cancel"
      }
    },
    {
      "name": "Get Booking By Ref (persisted + optional live)",
      "request": {
        "method": "GET",
        "url": "{{API_BASE}}/api/tbo-hotels/booking/{{BookingRef}}?live=1"
      }
    },
    {
      "name": "Unified Hotels (TBO)",
      "request": {
        "method": "GET",
        "url": "{{API_BASE}}/api/tbo-hotels/unified/hotels?city={{City}}"
      }
    },
    {
      "name": "Unified Offers (TBO)",
      "request": {
        "method": "GET",
        "url": "{{API_BASE}}/api/tbo-hotels/unified/offers?city={{City}}&checkin={{CheckIn}}&checkout={{CheckOut}}"
      }
    },
    {
      "name": "Ranked Multi-Supplier Hotels",
      "request": {
        "method": "GET",
        "url": "{{API_BASE}}/api/hotels-ranked/search?city={{City}}&checkIn={{CheckIn}}&checkOut={{CheckOut}}&currency=INR&limit=20"
      }
    },
    {
      "name": "Ranked: Property Alternatives",
      "request": {
        "method": "GET",
        "url": "{{API_BASE}}/api/hotels-ranked/property/{{PropertyId}}/alternatives"
      }
    },
    {
      "name": "Ranked: Supplier Metrics",
      "request": {
        "method": "GET",
        "url": "{{API_BASE}}/api/hotels-ranked/suppliers/{{Supplier}}/metrics?days=7"
      }
    },
    {
      "name": "Multi-Supplier Hotels (Transformed)",
      "request": {
        "method": "GET",
        "url": "{{API_BASE}}/api/hotels/search?destination={{City}}&checkIn={{CheckIn}}&checkOut={{CheckOut}}&adults=2&children=0&rooms=1&currency=INR"
      }
    }
  ],
  "variable": [
    {"key":"API_BASE","value":"https://builder-faredown-pricing.onrender.com"}
  ]
}
