{
  "name": "faredown-api",
  "version": "1.0.0",
  "description": "Node.js API backend for Faredown travel booking platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docs": "apidoc -i routes/ -o public/docs/",
    "build": "npm run lint && npm run test",
    "deploy": "npm run build && npm start",
    "migrate:ai": "node database/run-ai-migration.js",
    "init:redis": "node scripts/init-redis.js",
    "test:offerability": "node scripts/test-offerability.js",
    "test:bargain-api": "node scripts/test-bargain-api.js",
    "seed:bargain-data": "node scripts/seed-bargain-data.js",
    "seed:bargain-cleanup": "node scripts/seed-bargain-data.js --cleanup"
  },
  "keywords": [
    "faredown",
    "travel",
    "booking",
    "api",
    "nodejs",
    "express",
    "admin",
    "bargain"
  ],
  "author": "Zubin Aibara <admin@faredown.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "excel4node": "^1.8.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "@sendgrid/mail": "^8.1.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.3",
    "razorpay": "^2.9.6",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "apidoc": "^1.2.0",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/faredown/api.git"
  },
  "bugs": {
    "url": "https://github.com/faredown/api/issues"
  },
  "homepage": "https://faredown.com"
}
